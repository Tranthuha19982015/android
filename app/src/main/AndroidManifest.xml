<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity android:name=".MainActivity" android:configChanges="locale|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ExamToClass"
            android:theme="@style/MyApplication"
            android:label="@string/app_name">
        </activity>

        <activity android:name=".CurentLevel"
            android:theme="@style/MyApplication"
            android:label="@string/currentlevel">
        </activity>

        <activity android:name=".TopRankings"
            android:theme="@style/NoActionBar"
            android:label="@string/topranking">
        </activity>

        <activity android:name=".Settings"
            android:theme="@style/MyApplication"
            android:label="@string/setting">
        </activity>

        <activity android:name=".HowToPlay"
            android:theme="@style/MyApplication"
            android:label="@string/howtoplay">
        </activity>
    </application>
</manifest>